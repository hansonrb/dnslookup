<div class="text-right mb-3">
  <a class="btn btn-primary" href="/domains/new">
    Add new
  </a>
</div>
<table class="table table-striped table-hover">
  <tr>
    <th>Domain</th>
    <th>Office365?</th>
    <th></th>
  </tr>
  <% @domains.each do |domain| %>
    <tr class="<%= domain.is_office365 ? 'table-success' : '' %>">
      <td><%= domain.name %></td>
      <td><%= domain.is_office365 ? 'Yes' : 'No' %></td>
      <td>
        <%= link_to process_dns_domain_path(domain), method: :post do %>
          Process
        <% end %>&nbsp;&nbsp;
        <%= link_to edit_domain_path(domain), method: :get do %>
          Edit
        <% end %>&nbsp;&nbsp;
        <%= link_to domain_path(domain), method: :delete, data: { toggle: 'tooltip', placement: 'top' }, title: 'Delete domain' do %>
          Remove
        <% end %>
      </td>
    </tr>
  <% end %>
  <% if @domains.count == 0 %>
    <tr><td colspan="3">You have no domains added. Please add new</td></tr>
  <% end %>
</table>
